    "ci": "pnpm run check-format && pnpm run -F cmdk-lite ci && pnpm run -F website lint"
  },
  "packageManager": "pnpm@9.4.0",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@changesets/cli": "^2.27.9",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "typescript": "^5.5.2"
  }
}
